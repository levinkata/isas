@model Isas.Models.InsurerViewModels.LoanViewModel

@{
    ViewData["Title"] = "New Loan";
}

<h2>New Loan</h2>

<form asp-action="Create" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Loan</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" asp-for="ClientID" />
        <input type="hidden" asp-for="PolicyID" />
        <div class="form-group">
            <label asp-for="Loan.ComponentID" class="col-md-2 control-label">Component</label>
            <div class="col-md-10">
                <select asp-for="Loan.ComponentID" class="form-control" asp-items="Model.ComponentList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.AccountNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.AccountNumber" class="form-control" />
                <span asp-validation-for="Loan.AccountNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.Term" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.Term" class="form-control" />
                <span asp-validation-for="Loan.Term" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.Rate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.Rate" class="form-control" />
                <span asp-validation-for="Loan.Rate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.LoanDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.LoanDate" class="form-control" />
                <span asp-validation-for="Loan.LoanDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.Value" class="form-control" />
                <span asp-validation-for="Loan.Value" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.Premium" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.Premium" class="form-control" />
                <span asp-validation-for="Loan.Premium" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Loan.SettlementDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Loan.SettlementDate" class="form-control" />
                <span asp-validation-for="Loan.SettlementDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> |
                <a asp-controller="Policies"
                   asp-action="PolicyRisks"
                   asp-route-productId="@Model.ProductID"
                   asp-route-clientId="@Model.ClientID"
                   asp-route-policyId="@Model.PolicyID"
                   class="btn btn-default">
                    Return
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
