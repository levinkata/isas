@using Microsoft.AspNetCore.Http;

@model Isas.Models.InsurerViewModels.PropertyViewModel

@{
    ViewData["Title"] = "New Property";
}

<h2>New Property</h2>

<form asp-action="Create" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Property</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" asp-for="ClientID" />
        <input type="hidden" asp-for="PolicyID" />
        <div class="form-group">
            <label asp-for="Property.Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Property.Location" class="form-control" />
                <span asp-validation-for="Property.Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Property.Value" class="form-control" />
                <span asp-validation-for="Property.Value" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.Premium" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Property.Premium" class="form-control" />
                <span asp-validation-for="Property.Premium" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Property.StartDate" class="form-control" />
                <span asp-validation-for="Property.StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Property.EndDate" class="form-control" />
                <span asp-validation-for="Property.EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.CoverageID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Property.CoverageID" class="form-control" asp-items="Model.CoverageList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.WallTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Property.WallTypeID" class="form-control" asp-items="Model.WallTypeList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.RoofTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Property.RoofTypeID" class="form-control" asp-items="Model.RoofTypeList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.ResidenceTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Property.ResidenceTypeID" class="form-control" asp-items="Model.ResidenceTypeList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Property.BondHolder" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Property.BondHolder" class="form-control" />
                <span asp-validation-for="Property.BondHolder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> |
                <a asp-controller="Policies"
                   asp-action="PolicyRisks"
                   asp-route-productId="@Model.ProductID"
                   asp-route-clientId="@Model.ClientID"
                   asp-route-policyId="@Model.PolicyID"
                   class="btn btn-info">
                    Return
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
