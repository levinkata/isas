@model Isas.Models.Country

@{
    ViewData["Title"] = "Edit Country";
}

<h2>Edit Country</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Country</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ISOCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ISOCode" class="form-control" />
                <span asp-validation-for="ISOCode" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ISOCurrency" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ISOCurrency" class="form-control" />
                <span asp-validation-for="ISOCurrency" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DialingCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DialingCode" class="form-control" />
                <span asp-validation-for="DialingCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tax" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Tax" class="form-control" />
                <span asp-validation-for="Tax" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index"
       class="btn btn-default">
        Return
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
