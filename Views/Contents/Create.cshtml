@model Isas.Models.InsurerViewModels.ContentViewModel

@{
    ViewData["Title"] = "New Content";
}

<h2>New Content</h2>

<form asp-action="Create" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Content</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" asp-for="ClientID" />
        <input type="hidden" asp-for="PolicyID">
        <div class="form-group">
            <label asp-for="Content.Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Content.Location" class="form-control" />
                <span asp-validation-for="Content.Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Content.Value" class="form-control" />
                <span asp-validation-for="Content.Value" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.Premium" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Content.Premium" class="form-control" />
                <span asp-validation-for="Content.Premium" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.WallTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Content.WallTypeID" class="form-control" asp-items="Model.WallTypeList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.RoofTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Content.RoofTypeID" class="form-control" asp-items="Model.RoofTypeList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.ResidenceTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Content.ResidenceTypeID" class="form-control" asp-items="Model.ResidenceTypeList"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Content.StartDate" class="form-control" />
                <span asp-validation-for="Content.StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content.EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Content.EndDate" class="form-control" />
                <span asp-validation-for="Content.EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> |
                <a asp-controller="Policies"
                   asp-action="PolicyRisks"
                   asp-route-productId="@Model.ProductID"
                   asp-route-clientId="@Model.ClientID"
                   asp-route-policyId="@Model.PolicyID"
                   class="btn btn-info">
                    Return
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
