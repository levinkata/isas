@{
    int ro = 1;
    int rows = Model.Count();
}

<ul class="list">

    @foreach (var link in Model)
    {
        if (ro == 1)
        {
            <li class="first">@Html.RouteLink(link, new { controller = "Risk", action = "List", riskname = link })</li>
        }
        else if (ro == rows)
        {
            <li class="last">@Html.RouteLink(link, new { controller = "Risk", action = "List", riskname = link })</li>
        }
        else
        {
            <li>@Html.RouteLink(link, new { controller = "Risk", action = "List", riskname = link })</li>
        }
        ro++;
    }
</ul>