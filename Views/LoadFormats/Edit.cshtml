@model Isas.Models.LoadFormat

@{
    ViewData["Title"] = "Edit File Format";
}

<script type="text/javascript" src="/lib/jquery/src/jquery.js"></script>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Load Format</title>
</head>
<body>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Load Format</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="ProductID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UploadFileType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UploadFileType" class="form-control" />
                <span asp-validation-for="UploadFileType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Delimiter" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Delimiter" class="form-control" />
                <span asp-validation-for="Delimiter" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index"
       asp-route-productId="@Model.ProductID"
       class="btn btn-default">
       Return
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#LoadFormat_UploadFileType').on('change', function () {
            var upLoadFileType = $("#LoadFormat_UploadFileType").val();

            if (upLoadFileType = "CSV") {
                $('#LoadFormat_Delimiter').show();
            }
            else {
                $('#LoadFormat_Delimiter').hide();
            }
        })
    </script>
}
</body>
</html>
