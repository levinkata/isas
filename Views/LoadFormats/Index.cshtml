@model Isas.Models.InsurerViewModels.LoadFormatsViewModel

@{
    ViewData["Title"] = "File Formats";
}

<h2>File Formats</h2>

<table class="table table-striped">
    <caption style="color:royalblue">File Formats</caption>
    <thead>
        <tr>
            <th>
                Format Name
            </th>
            <th>
                File Type
            </th>
            <th>
                Delimiter
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LoadFormats) {
        <tr>
            <td>
                <a asp-action="SelectTable"
                   asp-route-productId="@Model.ProductID"
                   asp-route-loadFormatId="@item.ID"
                   asp-route-uploadFileType="@item.UploadFileType">
                   @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadFileType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delimiter)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Create"
       asp-route-productId="@Model.ProductID"
       class="btn btn-success">
        + Add File Format
    </a> |
    <a asp-controller="Products"
       asp-action="Board"
       asp-route-Id="@Model.ProductID"
       class="btn btn-info">
       Return
    </a>
</div>