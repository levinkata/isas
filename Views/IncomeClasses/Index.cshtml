@model IEnumerable<Isas.Models.IncomeClass>

@{
    ViewData["Title"] = "Income Classes";
}

<h2>Income Classes</h2>

<table class="table table-striped">
    <caption style="color:royalblue">Income Classes</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Create"
       class="btn btn-success">
        + Add Income Class
    </a>
</div>