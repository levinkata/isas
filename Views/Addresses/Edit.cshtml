@using Microsoft.AspNetCore.Http

@model Isas.Models.InsurerViewModels.AddressViewModel

@{
    ViewData["Title"] = "Edit Address";
    Guid itemId = Guid.Parse(Context.Session.GetString("ItemID"));
}

<h2>Edit Address</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Address</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Address.ID" />
        <input type="hidden" asp-for="ItemID" value="@itemId" />
        <div class="form-group">
            <label asp-for="Address.PhysicalAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address.PhysicalAddress" class="form-control" />
                <span asp-validation-for="Address.PhysicalAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address.PostalAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address.PostalAddress" class="form-control" />
                <span asp-validation-for="Address.PostalAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address.City" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index"
       asp-route-itemId="@itemId"
       class="btn btn-default">
       Return
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
