@model Isas.Models.InsurerViewModels.AddressViewModel

@{
    ViewData["Title"] = "New Address";
}

<h2>New Address</h2>

<form asp-action="Create" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Address</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ItemID" />
        <input type="hidden" asp-for="ControllerName" />
        <div class="form-group">
            <label asp-for="Address.PhysicalAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address.PhysicalAddress" class="form-control" />
                <span asp-validation-for="Address.PhysicalAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address.PostalAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address.PostalAddress" class="form-control" />
                <span asp-validation-for="Address.PostalAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address.City" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> |
                <a asp-controller="@Model.ControllerName"
                   asp-action="Details"
                   asp-route-id="@Model.ItemID"
                   class="btn btn-info">
                    Return
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
