@model Isas.Models.InsurerViewModels.ClaimDocumentViewModel

@{
    ViewData["Title"] = "New Claim Document";
}

<h2>New Claim Document</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Claim Document</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClaimDocument.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClaimDocument.Name" class="form-control" />
                <span asp-validation-for="ClaimDocument.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="ClaimDocument.Mandatory" />
                    <label asp-for="ClaimDocument.Mandatory"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> |
                <a asp-action="Index" class="btn btn-default">Return</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
