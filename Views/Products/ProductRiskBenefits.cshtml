@model IEnumerable<Isas.Models.ProductRiskBenefit>

@{
    ViewData["Title"] = "Product Risk Benefits";
}

<h2>Product Risk Benefits</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Benefit
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Benefit)
                </td>
                <td>
                    <a asp-action="DeleteProductRiskBenefit"
                       asp-route-id="@item.ID">
                       Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="CreateProductRiskBenefit"
       asp-route-productId="@ViewData["ProductID"]"
       asp-route-productRiskId="@ViewData["ProductRiskID"]"
       class="btn btn-default">
        Add Benefit
    </a> |
    <a asp-action="ProductRisks"
       asp-route-productId="@ViewData["ProductID"]"
       class="btn btn-default">Return</a>
</div>