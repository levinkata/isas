@model Isas.Models.InsurerViewModels.ProductViewModel

@{
    ViewData["Title"] = "New Product";
}

<h2>@Model.ContainerName - New Product</h2>

<form asp-action="Create" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ContainerID" type="hidden" />
        <div class="form-group">
            <label asp-for="Product.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Product.RenewalPeriod" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Product.RenewalPeriod" class="form-control" />
                <span asp-validation-for="Product.RenewalPeriod" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> |
                <a asp-action="Index" asp-route-containerId="@Model.ContainerID" class="btn btn-info">Return</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
