@model Isas.Models.InsurerViewModels.AllRisksViewModel

@{
    ViewData["Title"] = "All Risks";
}

<table class="table table-striped">
    <caption style="color:royalblue">All Risks</caption>
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Description
            </th>
            <th>
                Sum Insured
            </th>
            <th>
                Premium
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllRisks)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Component.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.Premium)
                </td>
                <td>
                    <a asp-controller="Claims"
                       asp-action="Create"
                       asp-route-productId="@Model.ProductID"
                       asp-route-clientId="@Model.ClientID"
                       asp-route-policyId="@Model.PolicyID"
                       asp-route-riskId="1"
                       asp-route-riskitemId="@item.ID">
                        Add Claim
                    </a> |
                    <a asp-controller="Products" asp-action="DetailsProductRisk" asp-route-id="@item.ID">Details</a> |
                    <a asp-controller="Products" asp-action="DeleteProductRisk" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="AllRisks"
       asp-action="Create"
       asp-route-productId="@Model.ProductID"
       asp-route-clientId="@Model.ClientID"
       asp-route-policyId="@Model.PolicyID"
       class="btn btn-success">
        + Add All Risk
    </a>
</div>