@model IEnumerable<Isas.Models.Container>

@{
    ViewData["Title"] = "Containers";
}

<h2>Containers</h2>

<table class="table table-striped">
    <caption style="color:royalblue">Containers</caption>
    <thead>
        <tr>
            <th>
                Container
            </th>
            <th>
                Contact Person
            </th>
            <th>
                Business
            </th>
            <th>
                Country
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="Index" asp-route-containerId="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Business)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Create"
        class="btn btn-success">
        + Add Container
    </a>
</div>
