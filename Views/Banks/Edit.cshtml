@model Isas.Models.InsurerViewModels.BankViewModel

@{
    ViewData["Title"] = "Edit Bank";
}

<h2>Edit Bank</h2>

<form asp-action="Edit" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Bank</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Bank.ID" />
        <input type="hidden" asp-for="Bank.PayeeClassID" />
        <div class="form-group">
            <label asp-for="Bank.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Bank.Name" class="form-control" />
                <span asp-validation-for="Bank.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" /> |
                <a asp-action="Index" asp-route-payeeClassId="@Model.Bank.PayeeClassID" class="btn btn-info">Return</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
