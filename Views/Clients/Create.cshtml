@model Isas.Models.InsurerViewModels.ClientViewModel

@{
    ViewData["Title"] = "New Client";
}

<h2>New Client</h2>

<form asp-action="Create" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Client.PayeeClassID" />
        <fieldset style="background-color:lemonchiffon">
            <h4>Client</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Client.ClientTypeID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Client.ClientTypeID" id="ClassID" class="form-control" asp-items="@Model.ClientTypeList"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Client.IDNumber" id="IDNumberLabel" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Client.IDNumber" class="form-control" />
                    <span asp-validation-for="Client.IDNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="Title">
                <label asp-for="Client.TitleID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Client.TitleID" class="form-control" asp-items="@Model.TitleList"></select>
                </div>
            </div>
            <div class="form-group" id="FirstName">
                <label asp-for="Client.FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Client.FirstName" class="form-control" />
                    <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Client.LastName" id="LastNameLabel" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Client.LastName" class="form-control" />
                    <span asp-validation-for="Client.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="Gender">
                <label asp-for="Client.Gender" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Client.Gender" class="form-control" asp-items="@Model.GenderList"></select>
                    <span asp-validation-for="Client.Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="BirthDate">
            <label asp-for="Client.BirthDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <ej-date-picker id="BirthDate" ej-for="Client.BirthDate" date-format="dd/MM/yyyy" class="form-control"></ej-date-picker>
                <span asp-validation-for="Client.BirthDate" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="Client.CountryID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Client.CountryID" class="form-control" asp-items="@Model.CountryList"></select>
                </div>
            </div>
            <div class="form-group" id="Occupation">
                <label asp-for="Client.OccupationID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Client.OccupationID" class="form-control" asp-items="@Model.OccupationList"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" /> |
                    <a asp-action="Index"
                       asp-route-payeeclassId="@Model.Client.PayeeClassID"
                       class="btn btn-info">
                        Return
                    </a>
                </div>
            </div>
        </fieldset>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        $(document).ready(function () {

            var classId = $("#ClassID").val();

            switch (classId) {
                case "1":         //  Company
                    $("#Title").hide();
                    $("#FirstName").hide();
                    $("#Gender").hide();
                    $("#BirthDate").hide();
                    $("#Occupation").hide();
                    $("#IDNumberLabel").html("Company Number");
                    $("#LastNameLabel").html($("#ClassID option:selected").text());
                    break;
                case "2":         //  Business Name
                    $("#Title").hide();
                    $("#FirstName").hide();
                    $("#Gender").hide();
                    $("#BirthDate").hide();
                    $("#Occupation").hide();
                    $("#IDNumberLabel").html("Business Name Number");
                    $("#LastNameLabel").html($("#ClassID option:selected").text());
                    break;
                case "3":         //  Individual
                    $("#Title").show();
                    $("#FirstName").show();
                    $("#Gender").show();
                    $("#BirthDate").show();
                    $("#Occupation").show();
                    $("#IDNumberLabel").html("ID Number");
                    $("#LastNameLabel").html("Last Name");
                    break;
                default:
                    break;
            };


            $("#ClassID").change(function () {
                classId = $("#ClassID").val();
                switch (classId) {
                    case "1":         //  Company
                        $("#Title").hide();
                        $("#FirstName").hide();
                        $("#Gender").hide();
                        $("#BirthDate").hide();
                        $("#Occupation").hide();
                        $("#IDNumberLabel").html("Company Number");
                        $("#LastNameLabel").html($("#ClassID option:selected").text());
                        break;
                    case "2":         //  Business Name
                        $("#Title").hide();
                        $("#FirstName").hide();
                        $("#Gender").hide();
                        $("#BirthDate").hide();
                        $("#Occupation").hide();
                        $("#IDNumberLabel").html("Business Name Number");
                        $("#LastNameLabel").html($("#ClassID option:selected").text());
                        break;
                    case "3":         //  Individual
                        $("#Title").show();
                        $("#FirstName").show();
                        $("#Gender").show();
                        $("#BirthDate").show();
                        $("#Occupation").show();
                        $("#IDNumberLabel").html("ID Number");
                        $("#LastNameLabel").html("Last Name");
                        break;
                    default:
                        break;
                };
            });

        });

    </script>
}
