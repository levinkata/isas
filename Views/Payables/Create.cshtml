@model Isas.Models.Payable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Payable</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Reference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Reference" class="form-control" />
                <span asp-validation-for="Reference" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PayableDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PayableDate" class="form-control" />
                <span asp-validation-for="PayableDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PaymentTypeID" class="form-control" />
                <span asp-validation-for="PaymentTypeID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BatchNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BatchNumber" class="form-control" />
                <span asp-validation-for="BatchNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Void" />
                    <label asp-for="Void"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VoidReason" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="VoidReason" class="form-control" />
                <span asp-validation-for="VoidReason" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Remarks" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PayableExportID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PayableExportID" class ="form-control" asp-items="ViewBag.PayableExportID"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
